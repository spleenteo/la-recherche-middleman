      = image_tag "logo-full-rev.svg",
        alt: dato.site.name,
        title: dato.site.name

    = partial "partials/socials-nav",
      locals: {html_class: "site-footer__socials"}

    = partial "partials/main-nav",
      locals: {html_class: "site-footer__nav"}

    = partial "partials/address",
      locals: {html_class: "site-footer__address"}

