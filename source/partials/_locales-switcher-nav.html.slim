- html_class ||= nil

div class=html_class
  /= link_to "ITA",
    "/it/",
    class: "#{html_class}__link #{'is-active' if I18n.locale == :it }",
    title: t('nav.switch_to_ita')

  /= link_to "ENG",
    "/en/",
    class: "#{html_class}__link #{'is-active' if I18n.locale == :en}",
    title: t('nav.switch_to_eng')
